
</div>
<div class="container">
  <%= form_for @lesson, url: lessons_path, :html => { :multipart => true } do |l| %>
    <div class="row">
      <div class="col s10 m10 l8">
        <h3> <%= @course.code %> - <%= @course.title %> - Lesson: </h3> 
      </div>
      <div class="col s2 m2 l4">
        <h3><%= l.text_field :title, placeholder: 'x.x - Lesson title' %> </h3>
      </div>
      
    </div>
    <div class='saveMessage'> &nbsp; </div>
  </div>
  <div id='corkboard' class='row' class='container'>
    <div class="col s12 m12 l9">
      <canvas id='whiteboard' height="500px" width="1000px"></canvas>
    </div>
  
    <%= render 'shared/whiteboard_palette' %>
</div>

<div class='container'>
  <div class='row'>
    <div class='col s12 m6 l6'>
      <%= l.text_field :homework, placeholder: 'Enter homework assignment'%>
    </div>
    <div class='col s12 m6 l6'>
      <%= l.text_field :difficulty, placeholder: 'Additional notes on this lesson' %>
    </div>
  </div>
  <div class="row">
    <div class="col s12 l4">
      <button id='recorder'class="btn waves-effect waves-light btn-large btn-fullwidth">Start Recording Lesson</button>    
    </div>
    <div class="col s12 l3">
      <%= l.submit "Click to save", class: 'btn' %> 
    </div>
  </div>
</div>
<% end %>
