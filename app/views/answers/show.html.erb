<h1> Answers/Show </h1>
<div>
<p> Student: <%= @answer.student.first_name %> </p>
<p> Question Creator: <%= @answer.question.teacher.first_name %>
</div>
<div id='corkboard' class='row'>
  <div class="col s9">
    <img id='question' src='<%= @answer.question.question %>'>
    <canvas id='whiteboard' height="500px" width="1000" data-points="<%= @answer.answer %>"></canvas>
  </div>
  <div class="col s3">
      <p class='question-marks'> This question is worth <%=@answer.question.marks%> marks </p>
      <p id="teach-comments">Teacher Comments:</p>
      <%= form_for @answer, method: :patch, url:question_answer_path do |f|%>
      <%= f.text_field :grade %>
      <%= f.submit "Grade student's work" %> 
      <% end %>
  </div>
</div>
<button id='showAnswer'>Show</button>